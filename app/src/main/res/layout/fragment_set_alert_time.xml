<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MyLightGrey"
    tools:context=".fragments.SetAlertTimeFragment">


    <Button
        android:id="@+id/btnSetAlertTime"
        android:layout_width="172dp"
        android:layout_height="78dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/hind_vadodara_bold"
        android:text="Set Alert"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/btnCancelAlert"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/hind_vadodara_bold"
        android:text="Cancel"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSetAlertTime" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="343dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvsetalerttasktime"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/hind_vadodara_bold"
            android:text="NOV 07 9:45 PM"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/hind_vadodara_bold"
            android:text="Task @"
            android:textAlignment="center"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="343dp"
        android:layout_height="410dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="62dp"
            android:fontFamily="@font/hind_vadodara_bold"
            android:text="Set Reminder Alert"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TimePicker
            android:id="@+id/ThetimePicker"
            android:layout_width="322dp"
            android:layout_height="336dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            android:headerBackground="@color/purple_200"
            android:numbersSelectorColor="@color/purple_200" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>